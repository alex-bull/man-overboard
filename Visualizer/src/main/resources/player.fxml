<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:id="player" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
          minWidth="-Infinity" prefHeight="250.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0"
          AnchorPane.rightAnchor="10.0" xmlns="http://javafx.com/javafx/8"
          fx:controller="controllers.PlayerController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="30.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="5.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="60.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="5.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" percentHeight="40.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="-Infinity" minHeight="10.0" percentHeight="30.0" prefHeight="80.0"
                        vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" percentHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>
        <GridPane fx:id="imageGrid" GridPane.halignment="CENTER" GridPane.hgrow="NEVER" GridPane.rowIndex="1"
                  GridPane.valignment="CENTER" GridPane.vgrow="NEVER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <ImageView fx:id="playerImageView" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true"
                           preserveRatio="true">
                    <image>
                        <Image url="@images/boat.png"/>
                    </image>
                </ImageView>
            </children>
        </GridPane>
        <Label fx:id="gamerTagLabel" text="Player" textFill="#000000bc" GridPane.halignment="CENTER"
               GridPane.valignment="BOTTOM">
            <font>
                <Font size="16.0"/>
            </font>
        </Label>
        <GridPane GridPane.columnIndex="2" GridPane.rowIndex="1">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Pane fx:id="healthPane" prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="1"/>
            </children>
        </GridPane>
        <GridPane GridPane.columnIndex="2">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="50.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="50.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label fx:id="boatSpeedLabel" text="20.1m/s" textFill="#000000aa" GridPane.columnIndex="1"
                       GridPane.halignment="LEFT" GridPane.valignment="BOTTOM">
                    <font>
                        <Font size="17.0"/>
                    </font>
                    <padding>
                        <Insets left="10.0" right="40.0"/>
                    </padding>
                </Label>
                <Label fx:id="boatSpeedLabel1" text="Boat Speed:" textFill="#000000aa" GridPane.halignment="RIGHT"
                       GridPane.valignment="BOTTOM">
                    <font>
                        <Font size="17.0"/>
                    </font>
                </Label>
            </children>
        </GridPane>

        <ImageView fx:id="speed" fitHeight="51.0" fitWidth="44.0" pickOnBounds="true" preserveRatio="true"
                   GridPane.columnIndex="2" GridPane.rowIndex="2" GridPane.valignment="TOP">
            <image>
                <Image url="@images/speed3.png"/>
            </image>
            <GridPane.margin>
                <Insets top="5.0"/>
            </GridPane.margin>
        </ImageView>

        <ImageView fx:id="potion" fitHeight="51.0" fitWidth="44.0" pickOnBounds="true" preserveRatio="true"
                   GridPane.columnIndex="2" GridPane.rowIndex="2" GridPane.valignment="TOP">
            <image>
                <Image url="@images/potion.png"/>
            </image>
            <GridPane.margin>
                <Insets left="55.0"/>
            </GridPane.margin>
        </ImageView>

    </children>
</GridPane>
